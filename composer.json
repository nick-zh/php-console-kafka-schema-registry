{
    "name": "jobcloud/php-console-kafka-schema-registry",
    "description": "Console commands for the Kafka schema registry",
    "license": [
        "MIT"
    ],
    "authors": [
        {
            "name": "Jobcloud AG",
            "homepage": "https://careers.jobcloud.ch/en/our-team/?term=133"
        }
    ],
    "repositories": [
        {
            "type": "vcs", "no-api": true, "url": "git@github.com:jobcloud/php-kafka-schema-registry-client.git"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "flix-tech/avro-php": "^3.0|^4.0",
        "jobcloud/php-kafka-schema-registry-client": "^1.0",
        "kriswallsmith/buzz": "^1.2",
        "nyholm/psr7": "^1.4",
        "pimple/pimple": "^3.2",
        "symfony/console": "^4.3|^5.1"
    },
    "require-dev": {
        "infection/infection": "^0.26",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5",
        "rregeer/phpunit-coverage-check": "^0.3.1",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Jobcloud\\SchemaConsole\\": "src/",
            "Jobcloud\\SchemaConsole\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": false
        }
    }
}
